{
    "listeners": {
        "*:7000": {
            "pass": "routes"
        }
     },

    "routes": [
                {
                    "match": {
                        "uri": "/static*"
                    },
                    "action": {
                        "share": "/projects/git/mwoodpatrick/podman_systemd/nginx-unit/www/$uri"
                    }
                },
                {
                    "match": {
                        "uri": "/example_php*"
                    },

                    "action": {
                        "pass": "applications/example_php"
                    }
                },
                {
                    "match": {
                        "uri": "/example_node*"
                    },

                    "action": {
                        "pass": "applications/example_node"
                    }
                }

            ],

    "applications": {
        "example_php": {
            "type": "php",
            "processes": 2,
            "root": "/projects/git/mwoodpatrick/podman_systemd/nginx-unit/www/php",
            "index": "index.php"
        },
        "example_node": {
            "type": "external",
            "working_directory": "/projects/git/mwoodpatrick/podman_systemd/nginx-unit/www/node/example",
            "executable": "app.js"
        }
    }
}

